<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_category_valuation_view_form_inherit" model="ir.ui.view">
        <field name="name">product.category.view.form.inherit.stock.account.ce.plus</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock_account.view_category_property_form_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_cost_method']" position="after">
                <field name="property_valuation" />
            </xpath>
        </field>
    </record>

    <record id="product_category_valuation_view_form_inherit" model="ir.ui.view">
        <field name="name">product.category.view.form.inherit.stock.account.ce.plus</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="stock.product_category_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='property_cost_method']" position="after">
                <field name="property_valuation" />
            </xpath>
        </field>
    </record>

</odoo>
